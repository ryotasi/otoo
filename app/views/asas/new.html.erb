<h2>Otoo</h2>

<%= form_for @asa do |f| %>

  <div class="field">
    <%= f.label :image, "画像" %>
    <%= f.file_field :image, :size => 30 %>
  </div>
  
  <div class="field">
    <%= f.label :odai, "一言コメント🤮" %>
    <%= f.text_field :odai, :size => 30 %>
  </div>
    <%= f.select :category, [["動物", "動物"], ["アニメ", "アニメ"], ["美容", "美容"] ,["ビジネス", "ビジネス"] ,["芸能人", "芸能人"] ,["イベント・お祭り", "イベント・お祭り"] ,["食べ物", "食べ物"] ,["マンガ", "マンガ"] ,["ミーム", "ミーム"] ,["映画", "映画"] ,["音楽", "音楽"] ,["スポーツ", "スポーツ"] ,["勉強", "勉強"] ,["ファッション", "ファッション"] ,["旅行", "旅行"] ,["テレビ番組・ドラマ", "テレビ番組・ドラマ"] ,["ゲーム", "ゲーム"] ,["その他", "その他"]], include_blank: "Which one?" %>
    <%= f.submit "Post" %>
<% end %>
  
<%= link_to "Back", asas_path %>  
